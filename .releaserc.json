{
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "deps",
            "release": "patch"
          },
          {
            "type": "build",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": "patch"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        },
        "writerOpts": {
          "mainTemplate": ".github/release/template.hbs",
          "commitPartial": ".github/release/commit.hbs"
        },
        "presetConfig": {
          "releaseCommitMessageFormat": "release: {{currentTag}}",
          "types": [
            {
              "type": "feat",
              "section": "üß∞ Features",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "‚öô Performance",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "üêõ Bugs fixed",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "‚úè Refactor",
              "hidden": false
            },
            {
              "type": "deps",
              "section": "üì• Dependency Updates",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "üì° Conventional Changes",
              "hidden": false
            },
            {
              "type": "build",
              "section": "‚öí Build Updates",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "üìñ Documentation",
              "hidden": false
            },
            {
              "type": "style",
              "section": "üìú Styling updates",
              "hidden": false
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "./gradlew check",
        "publishCmd": "./gradlew -Pversion=${nextRelease.version} publish"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "gradle.properties"
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "**/build/libs/**-shaded.jar"
          }
        ],
        "labels": false,
        "failTitle": false,
        "failComment": false,
        "successComment": false,
        "releasedLabels": false,
        "addReleases": false
      }
    ]
  ]
}
